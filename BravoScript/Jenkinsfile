pipeline {
    agent none 

    stages {
        // Stage 1: Install & Test (Keep this as is)
        stage('Install & Test') {
            agent {
                docker { 
                    image 'node:18-alpine' 
                    reuseNode true
                }
            }
            steps {
                dir('BravoScript') {
                    sh 'npm install'
                }
            }
        }

        // Stage 2: Build & Push (UPDATED)
        stage('Build & Push Image') {
            agent any 
            steps {
                script {
                    dir('BravoScript') {
                        // This loads the username/password you saved in Step 2 into variables
                        withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                            
                            // 1. Log in to Docker Hub
                            sh "echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin"
                            
                            // 2. Build the image with your username tag
                            // REPLACE 'YOUR_DOCKER_HUB_USERNAME' BELOW!
                            sh "docker build -t swkariyawasam/bravoscript:${BUILD_NUMBER} ."
                            
                            // 3. Push the image to the internet
                            // REPLACE 'YOUR_DOCKER_HUB_USERNAME' BELOW!
                            sh "docker push swkariyawasam/bravoscript:${BUILD_NUMBER}"
                        }
                    }
                }
            }
        }

        // Stage 3: Deploy (Keep this as is for now, but update the image name!)
        stage('Deploy') {
            agent any
            steps {
                sshagent(['ec2-server-key']) {
                    script {
                        def imageName = "swkariyawasam/bravoscript:${BUILD_NUMBER}"
                        
                        // Updated to use ec2-user
                        sh """
                            ssh -o StrictHostKeyChecking=no ec2-user@51.21.218.225 '
                                docker pull ${imageName}
                                docker stop bravoscript-app || true
                                docker rm bravoscript-app || true
                                docker run -d -p 5173:5173 --name bravoscript-app ${imageName}
                            '
                        """
                    }
                }
            }
        }
    }
}
