pipeline {
    agent none 

    stages {
        stage('Install & Test') {
            agent {
                docker { image 'node:18-alpine'; reuseNode true }
            }
            steps {
                dir('BravoScript') { sh 'npm install' }
            }
        }

        stage('Build & Push Image') {
            agent any 
            steps {
                script {
                    dir('BravoScript') {
                        withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                            sh "echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin"
                            sh "docker build -t swkariyawasam/bravoscript:${BUILD_NUMBER} ."
                            sh "docker push swkariyawasam/bravoscript:${BUILD_NUMBER}"
                        }
                    }
                }
            }
        }

        stage('Deploy to K8s') {
            agent any
            steps {
                script {
                    dir('BravoScript') {
                        withKubeConfig([credentialsId: 'minikube-secret']) {
                            
                            sh "sed -i 's|swkariyawasam/bravoscript:.*|swkariyawasam/bravoscript:${BUILD_NUMBER}|' k8s/deployment.yaml"
                            
                            sh 'kubectl apply -f k8s/deployment.yaml'
                            sh 'kubectl apply -f k8s/service.yaml'
                            
                            sh 'kubectl rollout restart deployment/bravoscript-deployment'
                        }
                    }
                }
            }
        }
    }
}
