pipeline {
    agent none 
    stages {
        stage('Install & Test') {
            agent {
                docker { 
                    image 'node:18-alpine' 
                    reuseNode true
                }
            }
            steps {
                /* This tells Jenkins to change directory into 'BravoScript' */
                dir('BravoScript') {
                    sh 'node -v'
                    sh 'npm install'
                    // sh 'npm test'  <-- Uncomment this when you are ready to test
                }
            }
        }
    }
}
